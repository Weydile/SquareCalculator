@{
    ViewData["Title"] = "Главная";
}


<div class="container m-5 p-2 rounded mx-auto bg-light shadow">
    <div class="row m-1 p-4">
        <div class="col">
            <div class="p-1 h1 text-center mx-auto display-inline-block">
                <u>Калькулятор сумм квадратов</u>
            </div>
        </div>
    </div>
    <div class="row m-1 p-3">
        <div class="col col-11 mx-auto">
            <div class="row bg-white rounded shadow-sm p-2 add-todo-wrapper align-items-center justify-content-center">
                <div class="col">
                    <input id="addNumberInput" class="form-control form-control-lg border-0 add-todo-input bg-transparent rounded" type="number" placeholder="Добавить число...">
                </div>
                <div class="col-auto px-0 mx-0 mr-2">
                    <button id="addNumberButton" type="button" class="btn btn-primary">Добавить</button>
                    <button id="clearValuesButton" type="button" class="btn btn-danger">Очистить</button>
                    <button id="submitButton" type="button" class="btn btn-success">Расчитать</button>
                </div>
            </div>
            <div class="p-1 h3 text-center mx-auto display-inline-block text-break">
                [<u id="values"></u>]
            </div>
        </div>
    </div>
    <div class="p-2 mx-4 border-black-25 border-bottom"></div>
    <div class="p-1 h3 text-center mx-auto display-inline-block">
        <u>История</u>
    </div>
    <div id="history">
    </div>
</div>